<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="630.0" prefWidth="1133.0" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="poker.app.view.RootLayoutController">
   <top>
      <MenuBar prefHeight="35.0" prefWidth="150.0">
        <menus>
          <Menu fx:id="mnuGame" mnemonicParsing="false" text="Game">
            <items>
                  <RadioMenuItem fx:id="fiveCardStud" mnemonicParsing="false" text="5 Card Stud" />
                  <RadioMenuItem fx:id="fiveCardJoker" mnemonicParsing="false" text="5 Card Joker Poker">
                     <toggleGroup>
                        <ToggleGroup fx:id="tglGames" />
                     </toggleGroup></RadioMenuItem>
                  <RadioMenuItem fx:id="fiveCardDraw" mnemonicParsing="false" text="5 Card Draw" toggleGroup="$tglGames" />
                  <RadioMenuItem fx:id="sevenCardDraw" mnemonicParsing="false" text="7 Card Draw" toggleGroup="$tglGames" />
                  <RadioMenuItem fx:id="texasHold" mnemonicParsing="false" text="Texas Hold'em" toggleGroup="$tglGames" />
                  <RadioMenuItem fx:id="omaha" mnemonicParsing="false" text="Omaha" toggleGroup="$tglGames" />
                  <RadioMenuItem mnemonicParsing="false" text="Close" toggleGroup="$tglGames" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
